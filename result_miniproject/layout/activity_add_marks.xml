<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMarksActivity"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTitleMarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Marks"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <EditText
        android:id="@+id/etRoll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Roll Number"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvTitleMarks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:padding="12dp"
        android:backgroundTint="#00BCD4" />

    <EditText
        android:id="@+id/etSubject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Subject"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/etRoll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:backgroundTint="#00BCD4" />

    <EditText
        android:id="@+id/etMarks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Marks Obtained"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/etSubject"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:backgroundTint="#00BCD4" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Marks"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:backgroundTint="#80BF33"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/etMarks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
